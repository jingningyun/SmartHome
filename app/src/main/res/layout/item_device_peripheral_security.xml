<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="172dp"
    android:background="@drawable/login_frame_bg">

    <ImageView
        android:id="@+id/ivIcon"
        android:layout_width="27dp"
        android:layout_height="31dp"
        android:layout_marginLeft="31.5dp"
        android:layout_marginTop="28dp"
        android:src="@drawable/device_peripheral_security"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="外围安防"
        app:layout_constraintStart_toStartOf="@id/ivIcon"
        app:layout_constraintTop_toBottomOf="@id/ivIcon"
        app:layout_constraintBottom_toTopOf="@id/tvMusic"
        android:textSize="@dimen/main_device_text"
        android:textColor="@color/text_color"/>

    <TextView
        android:id="@+id/tvMusic"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="离开"
        android:layout_marginRight="14.5dp"
        app:layout_constraintStart_toStartOf="@id/ivIcon"
        app:layout_constraintTop_toTopOf="@id/ivModel"
        app:layout_constraintEnd_toStartOf="@id/ivModel"
        app:layout_constraintBottom_toBottomOf="@id/ivModel"
        android:textSize="@dimen/main_device_text"
        android:textColor="@color/text_color_b3"/>

    <ImageView
        android:id="@+id/ivModel"
        android:layout_width="35.5dp"
        android:layout_height="35.5dp"
        android:gravity="center"
        android:src="@drawable/dmodel_leave_1"
        android:layout_marginRight="14.5dp"
        android:layout_marginBottom="14.5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>