<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="172dp"
    android:background="@drawable/login_frame_bg">

    <ImageView
        android:id="@+id/ivIcon"
        android:layout_width="38dp"
        android:layout_height="43dp"
        android:layout_marginTop="24.5dp"
        android:layout_marginLeft="28dp"
        android:src="@drawable/device_lighttube"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="灯筒"
        app:layout_constraintStart_toStartOf="@id/ivIcon"
        app:layout_constraintTop_toBottomOf="@id/ivIcon"
        app:layout_constraintBottom_toTopOf="@id/tvStatus"
        android:textSize="@dimen/main_device_text"
        android:textColor="@color/text_color"/>

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="关"
        app:layout_constraintStart_toStartOf="@id/ivIcon"
        app:layout_constraintTop_toTopOf="@id/cbSwitch"
        app:layout_constraintBottom_toBottomOf="@id/cbSwitch"
        android:textSize="@dimen/main_device_text"
        android:textColor="@color/text_color_b3"/>

    <CheckBox
        android:id="@+id/cbSwitch"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:gravity="center"
        android:layout_marginRight="14.5dp"
        android:layout_marginBottom="14.5dp"
        android:button="@drawable/dr_switch_bg_s"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>