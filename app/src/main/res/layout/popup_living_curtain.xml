<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="440dp"
    android:layout_gravity="center"
    android:layout_marginLeft="11dp"
    android:layout_marginRight="11dp"
    android:background="@drawable/login_frame_bg">

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:text="客厅窗帘"
        android:textColor="@color/text_color"
        android:textSize="@dimen/title_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivLivingCurtain"
        android:layout_width="179dp"
        android:layout_height="161dp"
        android:scaleType="fitCenter"
        android:src="@drawable/living_curtain"
        app:layout_constraintBottom_toTopOf="@id/ivClose"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvName" />


    <ImageView
        android:id="@+id/ivOpen"
        android:layout_width="47dp"
        android:layout_height="47dp"
        android:layout_marginLeft="46.5dp"
        android:src="@drawable/curtain_open_1"
        app:layout_constraintBottom_toBottomOf="@id/ivClose"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivClose" />

    <TextView
        android:id="@+id/tvProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30%"
        android:layout_marginBottom="11.5dp"
        android:textColor="@color/text_color"
        app:layout_constraintStart_toStartOf="@id/ivStop"
        app:layout_constraintEnd_toEndOf="@id/ivStop"
        app:layout_constraintBottom_toTopOf="@id/ivStop"
        android:textSize="18dp" />

    <ImageView
        android:id="@+id/ivStop"
        android:layout_width="47dp"
        android:layout_height="47dp"
        android:src="@drawable/curtain_stop"
        app:layout_constraintEnd_toStartOf="@id/ivClose"
        app:layout_constraintStart_toEndOf="@id/ivOpen"
        app:layout_constraintTop_toTopOf="@id/ivClose" />

    <ImageView
        android:id="@+id/ivClose"
        android:layout_width="47dp"
        android:layout_height="47dp"
        android:layout_marginRight="46.5dp"
        android:layout_marginBottom="44dp"
        android:src="@drawable/curtain_close_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</android.support.constraint.ConstraintLayout>