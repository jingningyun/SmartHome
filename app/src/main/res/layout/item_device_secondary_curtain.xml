<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="172dp"
    android:background="@drawable/login_frame_bg">

    <ImageView
        android:id="@+id/ivIcon"
        android:layout_width="33dp"
        android:layout_height="27dp"
        android:layout_marginLeft="34.5dp"
        android:layout_marginTop="33.5dp"
        android:src="@drawable/device_secondary_curtain"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="次卧单边帘"
        android:textColor="@color/text_color"
        android:textSize="@dimen/main_device_text"
        app:layout_constraintBottom_toTopOf="@id/ivOpen"
        app:layout_constraintStart_toStartOf="@id/ivIcon"
        app:layout_constraintTop_toBottomOf="@id/ivIcon" />

    <ImageView
        android:id="@+id/ivOpen"
        android:layout_width="30.5dp"
        android:layout_height="30.5dp"
        android:src="@drawable/curtain_right_1"
        android:layout_marginLeft="15.5dp"
        android:layout_marginBottom="15.5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/ivSwitch"
        android:layout_width="30.5dp"
        android:layout_height="30.5dp"
        android:src="@drawable/curtain_stop"
        app:layout_constraintTop_toTopOf="@id/ivOpen"
        app:layout_constraintStart_toEndOf="@id/ivOpen"
        app:layout_constraintEnd_toStartOf="@id/ivClose"/>

    <ImageView
        android:id="@+id/ivClose"
        android:layout_width="30.5dp"
        android:layout_height="30.5dp"
        android:src="@drawable/curtain_left_1"
        android:layout_marginRight="15.5dp"
        app:layout_constraintTop_toTopOf="@id/ivOpen"
        app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>